<h1 class="text-center mb-5">商品一覧</h1>

<div class='container-fluid'>
   <% @products.each do |product| %>
    <div class='media'>
      <div class="media-body border">
          <% if product.image? %>
            <a><%= image_tag product.image.url %></a>
          <% end %>
          <p class ='product-name'><%= link_to product.name,product %>(<%= product.price.to_s(:delimited) %>円)</p>
      </div>
      <div class="media-footer border">
        <p class="p-description"><%= product.description %></p>
      </div>
    </div>
   <% end %>
</div>
  <%= paginate @products %>